<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tree_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/tree_layout_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp" >

        <Button
            android:id="@+id/tree_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/listbtn_selected"
            android:text="课程" />

        <Button
            android:id="@+id/tree_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tree_btn1"
            android:background="@color/listbtn"
            android:text="btn2"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/tree_btn_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_refresh_selector" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp" >

        <ExpandableListView
            android:id="@+id/tree_listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/listview" />

        <ExpandableListView
            android:id="@+id/tree_listview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/listview"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>